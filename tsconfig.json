{
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  },
  "compilerOptions": {
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": true,
    "stripInternal": true,
    "target": "es5",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules"
    ],
    "types": [
      "node"
    ]
  },
  "files": [
    "./server.ts"
  ]
}
